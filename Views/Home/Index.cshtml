                            } 
                            @if(Model.OdstavkyList.Where(o=>o.Lokality.Region.NazevRegionu=="Severní Čechy" && o.Od.Date==DateTime.Today).Count()==0)
                            {   
                                <div class="bar h-0" style="background-color: red;"></div>                        
                            } 
                            <p class="month" style="margin:0px">Severní Čechy</p>   
                        </div>
                        <div class="month-group">
                            @if(Model.OdstavkyList.Where(o=>o.Lokality.Region.NazevRegionu=="Jížní Morova" && o.Od.Date==DateTime.Today).Count()==1)
                            {   
                                <div title="50%" class="bar h-50" style="background-color:#4cc790 ;"></div>                        
                            } 
                            @if(Model.OdstavkyList.Where(o=>o.Lokality.Region.NazevRegionu=="Jížní Morova" && o.Od.Date==DateTime.Today).Count()==2)
                            {   
                                <div title="100%" class="bar h-100" style="background-color:#4cc790 ;"></div>                        
                            } 
                            @if(Model.OdstavkyList.Where(o=>o.Lokality.Region.NazevRegionu=="Jížní Morova" && o.Od.Date==DateTime.Today).Count()==0)
                            {   
                                <div class="bar h-0" style="background-color:#4cc790 ;"></div>                        
                            } 
                            <p class="month" style="margin:0px">Jižní Morava</p>  
                        </div>
                        <div class="month-group">
                            @if(Model.OdstavkyList.Where(o=>o.Lokality.Region.NazevRegionu=="Severní Morava" && o.Od.Date==DateTime.Today).Count()==1)
                            {   
                                <div title="50%" class="bar h-50" style="background-color: #0f1783;"></div>                        
                            } 
                            @if(Model.OdstavkyList.Where(o=>o.Lokality.Region.NazevRegionu=="Severní Morava" && o.Od.Date==DateTime.Today).Count()==2)
                            {   
                                <div title="100%" class="bar h-100" style="background-color: #0f1783;"></div>                        
                            } 
                            @if(Model.OdstavkyList.Where(o=>o.Lokality.Region.NazevRegionu=="Severní Morava" && o.Od.Date==DateTime.Today).Count()==0)
