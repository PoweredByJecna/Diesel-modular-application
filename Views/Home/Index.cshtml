            <div class="section small">
                <h2>Aktuální vytížení:</h2>
                <div class="main-container">
            
                    <div class="year-stats">
                        <div class="month-group">
                            @if(Model.OdstavkyList.Where(o=>o.Lokality.Region.NazevRegionu=="Severní Čechy" && o.Od.Date==DateTime.Today && o.Do.Date==DateTime.Today).Count()==1)
