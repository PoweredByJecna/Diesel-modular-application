                            {   
                                <div title="50%" class="bar h-50" style="background-color: #e59f3c;"></div>                        
                            } 
                            @if(Model.OdstavkyList.Where(o=>o.Lokality.Region.NazevRegionu=="Jižní Čechy" && o.Od.Date==DateTime.Today).Count()==2)
