                            {   
                                <div title="50%" class="bar h-50" style="background-color: #915db1;"></div>                        
                            } 
                            @if(Model.OdstavkyList.Where(o=>o.Lokality.Region.NazevRegionu=="Západní Čechy" && o.Od.Date==DateTime.Today).Count()==2)
