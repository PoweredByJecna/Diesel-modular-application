<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"] - Da_Modular_Application</title>
        <script src="https://kit.fontawesome.com/cd832cb986.js"></script>
        <link rel="stylesheet" href="~/css/home.css"/>
        <link rel="stylesheet" href="~/css/Login.css"/>
        <link rel="stylesheet" href="~/css/_layout.css"/>
        <link rel="stylesheet" href="~/css/lokality.css">
        <link rel="stylesheet" href="~/css/odstavky.css">
    </head>

    <body>
        @if(User.Identity?.IsAuthenticated==true)   
        {
            
            <div class="Content">
                <div class="sidemenu">
                    <div class="s1">
                        <i class="fa-solid fa-bars fa-2xl" style="color: #ffffff;"></i>
                    </div>
                    <div class="s2">
                        <div id="sidebaroption">
                            <div class="sidebaroption">
                                    <a asp-action="Index" asp-controller="Home" style="text-decoration: none;">
                             
                                    <i class="fa-solid fa-house-chimney-window"></i>
                                    <span class="sb">Home</span>  
                                 
                                    </a>
                                
                            </div>
                        
                            <div class="sidebaroption">
                                <a asp-action="Index" asp-controller="Lokality" style="text-decoration: none;"> 
                                    
                                <i class="fa-solid fa-tower-broadcast"></i>
                                <span class="sb">Lokality</span>  
                            
                                </a>
                            </div>
                        
                            <div class="sidebaroption">
                            <a asp-action="Index" asp-controller="Odstavky" style="text-decoration: none;"> 
                                
                                <i class="fa-solid fa-bolt"></i>
                                <span class="sb">Odstávky</span>  

                            </a> 
                            </div>
                        
                            <div id="sidebaroption-bg"></div>
                        </div>
                    </div>
            
                </div>

                <div class="main">

                    <div class="header">
                        <nav id="navbar">
                           
                              
                                 <div class="navdiv settings">
                                    <i class="fa-solid fa-gear"></i>
                                </div>
                                <div class="navdiv signout">
                                    <a asp-action="Logout" asp-controller="Logout">
                                        <i class="fa-solid fa-right-from-bracket"></i>
                                    </a>
                                </div>   
                                 <div class="navdiv add">
                                    <i class="fa-solid fa-plus"></i>
                                    <a>Add member</a>
                                </div>
                               
                            

                                <div id="app-cover">
                                    <div id="select-box">
                                        <div class="user-icon">
                                            <i class="fa-solid fa-user"></i>
                                        </div>
                                        <input type="checkbox" id="options-view-button">
                                        <div id="options">
                                            <div class="option">
                                                <input class="s-c top" type="radio" name="platform" value="Profil">
                                                <input class="s-c bottom" type="radio" name="platform" value="Profil">
                                                <i class="fa-solid fa-user"></i>
                                                <span class="label">Profil</span>  
                                                <span class="opt-val">Profil</span>
                                            </div>
                                    
                                        
                                            <div class="option">
                                                <input class="s-c top" type="radio" name="platform" value="Nastavení">
                                                <input class="s-c bottom" type="radio" name="platform" value="Nastavení">
                                                <i class="fa-solid fa-gear"></i>
                                                <span class="label">Nastavení</span>  
                                                <span class="opt-val">Nastavení</span>
                                            </div>
                                    
                                    
                                            <div class="option">
                                                <input class="s-c top" type="radio" name="platform" value="Podpora">
                                                <input class="s-c bottom" type="radio" name="platform" value="Podpora">
                                                <i class="fa-solid fa-circle-info"></i>
                                                <span class="label">Podpora</span>  
                                                <span class="opt-val">Podpora</span>
                                            </div>
                                    
                                    
                                            <div class="option">
                                                <a asp-action="Logout" asp-controller="Logout">   
                                                    <input  class="s-c top" type="radio" name="platform" value="OdhlásitSe">
                                                    <input class="s-c bottom" type="radio" name="platform" value="OdhlásitSe">
                                                 
                                                    <i class="fa-solid fa-right-from-bracket"></i>
                                                    <span class="label">Odhlásit se</span>  
                                                    <span class="opt-val">Odhlásit se</span>
                                                </a>
                                            </div>
                                
                                        </div>
                                        <div id="option-bg"></div>
                                    </div>
                                    
                                </div>

                        </nav>
                    </div> 
           
                            
                    @if(User.Identity?.IsAuthenticated==true)
                    {
                         @RenderBody()
                    }


                               
                    <div class="footer">
                        <ul class="ul-footer">
                            <li class="nav-footer"><a class="a-text" href="#" >Home</a></li>
                             <li class="nav-footer"><a class="a-text" href="#" >Podpora</a></li>   
                            <li class="nav-footer"><a class="a-text" href="#" >Info</a></li>
                        </ul>
                        <p >© WebApp 2024</p>
                        <button id="theme-toggle" class="theme-toggle">
                            <i class="fa-solid fa-adjust"></i>
                        </button>
                    </div>  




                </div>

       
                   
                
            </div> 
        }  
             @RenderBody()
            
            @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/home.js"></script>
    </body>
        
</html>
