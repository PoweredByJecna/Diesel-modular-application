@model Diesel_modular_application.Models.OdstavkyViewModel
@using PagedList.Core.Mvc;
<html>
    <body>
        <div class="conteiner" id="con">
            <div class="tables-row" style="justify-content:center">
                <div class="table-div odstavkyTable">
                    <div class="name" id="OdstavkyTable">
                        <h2 style="padding-right:20px; color: black;">Všechny odstávky <i class="fa-solid fa-bolt"></i></h2>
                        <div>
                            <span class="legenda">
                                Aktivní :
                                <i class="fa-solid fa-square" style="color: rgba(0, 128, 0, 0.371)"></i>
                            </span>
                            <span class="legenda">
                                Ukončené :
                                <i class="fa-solid fa-square" style="color: rgba(255, 0, 0, 0.382)"></i>
                            </span>
                            <span class="legenda">
                                Nekativni :
                                <i class="fa-solid fa-square" style="color: #0055ff28"></i>
                            </span>
                            <span class="legenda">
                                Nepřižazeno :
                                <i class="fa-solid fa-square" style="color:  rgba(255, 166, 0, 0.521)"></i> 
                            </span>
                            <span class="legenda">
                                Čekající :
                                <i class="fa-solid fa-square" style="color: rgba(255, 255, 0, 0.321)"></i>
                            </span>
                             <span class="legenda">
                                Nediesluje se :
                                <i class="fa-solid fa-square" style="color:  rgb(0 17 255 / 43%)"></i>
                            </span>
                            

                        </div>
                    </div>
                    <table id="odTable" style="margin-bottom: 15px;">
                        <thead>
                            <tr>
                                <th>Akce</th>
                                <th>Id</th>
                                <th>Distributor</th>
                                <th>Lokalita</th>
                                <th>Klasifikace</th>
                                <th>Od</th>
                                <th>Do</th>
                                <th>Adresa</th>
                                <th>Baterie<a> [min]</a></th>
                                <th>Popis</th>
                                <th>Zásuvka</th>
                            </tr>
                        </thead>
                        <tbody id="table-body">     
                        </tbody>          
                    </table>   
                </div>
            </div>
            <div class="tables-row">
                <div class="section small OdstavkyView" style="flex-direction: row; width: 30%; flex: none;" >
                    <div class="div-odstavka-create" id="handleOdstavka">
                            <form>
                                <h2 style="color: black;">Odstávka - ruční založení <i class="fa-solid fa-hand"></i></h2>
                                <div style="position: relative;">
                                    <label>Lokalita:</label>
                                    <input id="lokalita" type="text" class="input odstavky" onkeyup="SuggestLokalita()" autocomplete="off">
                                    <div id="lokality-suggestions" class="lokalita-sugg"style="position: absolute; background: white; border: 1px solid #cbd0dd; display: none;"></div>  
                                </div>
                                <div>
                                    <label>Od:</label>
                                    <input id="od" type="datetime-local"  class="input odstavky"> 
                                </div>
                                <div>
                                    <label>Do:</label>
                                    <input id="do" type="datetime-local"  class="input odstavky">
                                </div>
                                <div>
                                    <label>Popis:</label>
                                    <textarea id="popis" type="text" style="border-color:#cbd0dd; border-radius:5px; min-width: 100%;" class="input odstavky"></textarea>
                                </div>
                                
                                <button type="button" class="button" onclick="CreateOdstavku()">Vytvořit</button>
                            </form>
                      
                    </div>
                </div>
                <div class="section small OdstavkyView" style="width: 70%">
                        <div class="main-container OdstavkyView" >
                            <div class="year-stats lok">
                                <h3 id="total-odstavky">Všechny odstávky: Načítání...</h3>
                                <div class="regions odstavky" id="odstavkyContainer">  
                                </div>
                        </div>
                    </div>   
                </div>

                
            </div>
        </div>
    </body>
</html>